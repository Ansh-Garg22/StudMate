      #email {
        width: 375px;
        height: 70.4px;
        padding: 10px 0px 10px 30px;
        border: none;
        background-color: white;
        box-shadow: rgba(38, 45, 118, 0.086) 0px 10px 60px;
        font-size: 20px;
        color: #555;
      }

      #subject {
        margin-top: 50px;
        width: 800px;
        height: 70.4px;
        padding: 10px 0px 10px 30px;
        border: none;
        background-color: white;
        box-shadow: rgba(38, 45, 118, 0.086) 0px 10px 60px;
        font-size: 20px;
        color: #555;
      }

      #message {
        margin-top: 50px;
        width: 800px;
        padding: 20px 0px 10px 30px;
        border: none;
        background-color: white;
        box-shadow: rgba(38, 45, 118, 0.086) 0px 10px 60px;
        font-size: 22px;
        color: #555;
      }

      #right button {
        margin-top: 43px;
        height: 60px;
        width: 200px;
        padding-top: 8px;
        padding-bottom: 8px;
        font-size: 20px;
        color: white;
        background-color: #5e2ced;
        border: 1px solid #5e2ced;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        cursor: pointer;
      }

      #right button:hover {
        color: #5e2ced;
        background-color: white;
      }

      #name:focus {
        outline: none;
      }

      #email:focus {
        outline: none;
      }

      #subject:focus {
        outline: none;
      }

      #message:focus {
        outline: none;
      }

      footer {
        margin-top: auto;

        left: 0;
        bottom: 0;
        right: 0;
        padding-bottom: 20px;
        background: #0a1535;
        color: #f9f9f9;
        width: 100%;
      }

      footer section {
        padding: 0 50px;
      }

      section.top {
        padding-top: 30px;
      }

      section .icons {
        font-size: 22px;
        /* height: 30px; */
      }

      section.top h2 {
        display: block;
        height: 30px;
        margin: 0 0 30px;
      }

      section.top ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        gap: 30px;
        grid-template-columns: repeat(4, 1fr);
      }

