      }

      .p2 {
        font-size: 20px;
        letter-spacing: 1px;
        margin-bottom: 30px;
        color: #555;
      }

      #left-button {
        width: 350px;
        height: 60px;
        padding-top: 8px;
        padding-bottom: 8px;
