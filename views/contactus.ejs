        font-weight: 500;
      }

      .navbar3-feature {
        list-style: none;
      }

      .navbar3-feature a {
        text-decoration: none;
        color: rgb(94, 44, 237);
        font-size: 24px;
        font-weight: 500;
      }

      #nav3-a2 {
        border: 2px solid rgb(94, 44, 237);
        padding: 10px 30px 10px 30px;
        border-top-left-radius: 40px;
        border-top-right-radius: 40px;
        border-bottom-left-radius: 40px;
      }

      #nav3-a1 {
        padding-right: 30px;
      }

      #content {
        display: flex;
        justify-content: space-evenly;
        padding: 215px 0px 120px 0px;
      }

      #left {
        display: flex;
        flex-direction: column;
        width: 350px;
      }

      #left h2 {
        margin-bottom: 20px;
        font-size: 35px;
