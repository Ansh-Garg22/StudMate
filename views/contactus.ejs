      }

      #nav-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 75px;
        padding: 45px 90px 45px 90px;
        background-color: white;
        box-shadow: rgba(38, 45, 118, 0.08) 0px 10px 60px;
        position: fixed;
        width: 100%;
      }

      #navbar2 {
        display: flex;
        justify-content: space-evenly;
        width: 500.25px;
        padding-right: 20px;
      }

      #navbar3 {
        display: flex;
        justify-content: space-evenly;
        width: 320px;
      }

      .navbar2-feature {
        list-style: none;
