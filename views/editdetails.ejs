<!DOCTYPE html>
<html>
  <head>
    <title>Edit Student Details</title>
  </head>
  <body>
    <h1>Edit Student Details</h1>
    <form method="POST" action="/students/<%= user._id %>/update">
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= user.name %>"
        required
      />

      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
        required
      />

      <label for="rollNo">Roll Number:</label>
      <input
        type="text"
        id="rollNo"
        name="rollNo"
        value="<%= user.rollNo %>"
        required
      />

      <button type="submit">Update</button>
    </form>
  </body>
</html>