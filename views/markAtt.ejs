          <div class="message">
            <p><b style="color: #4a3f3f;">Examination</b> Instructions for Mid Term Examination.</p>
            <small class="text-muted">Yesterday</small>
          </div>
        </div>

        <h2 id="h22">Upcoming Tasks</h2>

        <div class="leaves">
          <small class="text-muted">Today</small>

          <div class="teacher">
            <i class="fa-solid fa-microphone" style="color: #9f0000; font-size: 25px"></i>

            <div class="info">
              <h3>Demo Speech</h3>
              <small class="text-muted">Mass Communication</small>
            </div>
            <div class="arrow">
              <p style="
                  font-size: 25px;
                  color: rgb(138, 132, 132);
                  margin-left: 40px;
                ">
                >
              </p>
            </div>
          </div>
          <div class="teacher">
            <i class="fa-sharp fa-solid fa-file-pen" style="
                color: #f18f07;
                font-size: 25px;
                background-color: #ffe8a9;
              "></i>
            <div class="info">
              <h3>Globalisation Essay</h3>
              <small class="text-muted">Advanced Geography</small>
            </div>
            <div class="arrow">
              <p style="
                  font-size: 25px;
                  color: rgb(138, 132, 132);
                  margin-left: 0px;
                ">
                >
              </p>
            </div>
          </div>

          <small class="text-muted">This Week</small>

          <div class="teacher">
            <i class="fa-solid fa-clock" style="
                color: #744ceb;
                font-size: 25px;
                background-color: rgb(198, 172, 245);
              "></i>
            <div class="info">
              <h3>Management Quiz</h3>
              <small class="text-muted">Product management</small>
            </div>
            <div class="arrow">
              <p style="
                  font-size: 25px;
                  color: rgb(138, 132, 132);
                  margin-left: 10px;
                ">
                >
              </p>
            </div>
          </div>
          <div class="teacher">
            <i class="fa-sharp fa-solid fa-file-pen" style="
                color: #f18f07;
                font-size: 25px;
                background-color: #ffe8a9;
              "></i>

            <div class="info">
              <h3>Docu Paper</h3>
              <small class="text-muted">Advance Geography</small>
            </div>
            <div class="arrow">
              <p style="
                  font-size: 25px;
                  color: rgb(138, 132, 132);
                  margin-left: 50px;
                ">
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>

  <script>
    const attendanceForm = document.getElementById("attendance-form");
    const deleteRecordButtons = document.querySelectorAll('.delete-record');


    attendanceForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(attendanceForm);
      const response = await fetch("/markAttendance", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(Object.fromEntries(formData)),
      });
      const data = await response.json();
      alert(data.message);
      window.location.href = "/"; // Redirect to the dashboard after marking attendance
    });

    deleteRecordButtons.forEach((button) => {
    button.addEventListener('click', async () => {
      const recordId = button.dataset.recordId;
      const confirmed = confirm('Are you sure you want to delete this record?');
      if (confirmed) {
        const response = await fetch(`/markAttendance/deleteAttendanceRecord/${recordId}`, {
          method: "DELETE",
        });
        if (!response.ok) {
        const error = await response.json();
        console.error('Error deleting attendance record:', error.message);
        alert(`Failed to delete attendance record: ${error.message}`);
      } else {
        const data = await response.json();
        alert(data.message);
        window.location.reload();
      }
      }
    });
  });
  </script>
</body>

</html>