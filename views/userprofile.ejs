<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User Profile</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    /><link rel="icon" type="image/x-icon" href="/css/images/favicon.ico">
    <link rel="stylesheet" href="/css/Dashboard.css" />
  </head>
  <body>


    <div class="container">
      <div class="nav">
        <ul>
          <li>
            <a href="#" class="logo" style="color: #0d0d0d">
              <i
                class="fa-solid fa-graduation-cap fa-rotate-by"
                style="
                  color: #2005b7;
                  --fa-rotate-angle: 10deg;
                  font-size: 30px;
                "
              ></i>
              <span class="nav-item">Dashboard</span><br />
            </a>
          </li>
          
            <a class="hoverable" href="/home">
              <i class="fas fa-home"></i>
              <span class="nav-item">Home</span>
            </a>
          </li>
          <li>
            <a class="hoverable" href="###">
              <i class="fas fa-user"></i>
              <span class="nav-item">Profile</span>
            </a>
          </li>
          <li>
            <a class="hoverable" href="/feedback">
              <i class="fas fa-user-graduate"></i>
              <span class="nav-item">Feedback</span>
            </a>
          </li>
          
          <li>
            <a class="hoverable" href="####">
              <i class="fas fa-chart-bar"></i>
              <span class="nav-item">Edit Profile</span>
            </a>
          </li>
          
          <li>
            <a class="hoverable" href="/contact">
              <i class="fas fa-question-circle"></i>
              <span class="nav-item">Help</span>
            </a>
          </li>
          <li>
            <a href="/logout" class="logout">
              <i class="fas fa-sign-out-alt"></i>
              <span class="nav-item">Log out</span>
            </a>
          </li>
        </ul>
      </div>



    <div class="profile">
      <h1>Student Details</h1>
      <div class="details">
        <p><strong>Name:</strong> <%= user.name %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Roll No:</strong> <%= user.rollNo %></p>
        <p><strong>Semester:</strong> <%= user.semester %></p>
        <p><strong>Alumni:</strong> <%= user.isAlumni ? 'Yes' : 'No' %></p>
      </div>

      <h2>Subjects</h2>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
          </tr>
        </thead>
        <tbody>
          <% user.subjects.forEach(subject => { %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.code %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    </div>

    
  </body>
</html>